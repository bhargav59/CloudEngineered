# Railway Environment Variables Template - Free Tier (AI Features Disabled)
# Copy these to Railway Dashboard → Your Project → Variables

# Django Core Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DEBUG=False
ALLOWED_HOSTS=<your-app-name>.up.railway.app

# Security (Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=<generate-and-paste-here>

# Database (Auto-set by Railway PostgreSQL plugin)
# DATABASE_URL=postgresql://... (Railway sets this automatically)

# AI Features (Disabled for free tier)
AI_FEATURES_ENABLED=False
OPENROUTER_ENABLED=False

# Static Files
USE_S3=False
STATIC_URL=/static/
MEDIA_URL=/media/

# Email (Optional - Configure if needed)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Stripe (Optional - Configure if needed)
# STRIPE_PUBLIC_KEY=pk_test_your_key
# STRIPE_SECRET_KEY=sk_test_your_key

# Google AdSense (Optional)
# ADSENSE_CLIENT_ID=ca-pub-your-id
# ADSENSE_ENABLED=True

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn

# Redis (If using Railway Redis plugin)
# REDIS_URL=${REDIS_URL}

# Celery (Set to False if not using background tasks on free tier)
CELERY_ENABLED=False

# Performance Settings (Optimized for free tier)
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
